{
  "manifest_version": 2,
  "name": "AutoPatchWork Mod",
  "version": "1.9.10",
  "description": "Addon for auto-appending following paginated pages to the current on scroll.",
  "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
  },
  "background": {
      "page": "index.html"
  },
  "options_ui": {
      "page": "options.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["unlimited_storage", "tabs", "notifications"],
  "optional_permissions": ["storage"],
  "content_scripts": [{
      "js": ["includes/autopatchwork.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "all_frames": true
  }],
  "applications": {
      "gecko": {
          "id": "autopatchwork-mod@mozilla.firefox"
      }
  }
}
